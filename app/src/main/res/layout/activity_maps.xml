<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >
    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MapsActivity">
    </fragment>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/show_details_map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/buttons_all_margins_double"
            android:layout_marginTop="@dimen/buttons_all_margins_double"
            android:layout_marginEnd="@dimen/buttons_all_margins"
            android:layout_weight="1"
            android:background="@color/app_buttons_red"
            android:onClick="openDetails"
            android:text="@string/show_details"
            android:textColor="@color/app_buttons_text_white" />

        <Button
            android:id="@+id/show_overall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/buttons_all_margins"
            android:layout_marginTop="@dimen/buttons_all_margins_double"
            android:layout_marginEnd="@dimen/buttons_all_margins_double"
            android:layout_weight="1"
            android:background="@color/app_buttons_red"
            android:onClick="openOverall"
            android:text="@string/show_overall"
            android:textColor="@color/app_buttons_text_white" />

    </LinearLayout>

</FrameLayout>